# Admin Panel Configuration
DJANGO_SECRET_KEY=your_secret_key_here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Limits Configuration
FREE_MONTHLY_LIMIT=10
PREMIUM_MONTHLY_LIMIT=100
CHANNEL_BONUS_REQUESTS=5
